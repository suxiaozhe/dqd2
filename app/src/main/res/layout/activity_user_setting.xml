<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/setting_linearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/green"></LinearLayout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green">

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:src="@drawable/title_back" />
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="设置"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/grey"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接收推送通知"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    />
                <CheckBox
                    android:id="@+id/news_checkbox"
                    android:layout_marginTop="20dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@null"
                    android:button="@null"
                    android:background="@drawable/check_selector"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/grey">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="其他"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WiFi下自动播放视频"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    />
                <CheckBox
                    android:id="@+id/setting_video_checkbox"
                    android:layout_marginTop="20dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@null"
                    android:button="@null"
                    android:background="@drawable/check_selector"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                ></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无图模式（2G/3G/4G）"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    />
                <CheckBox
                    android:id="@+id/setting_nopicture_checkbox"
                    android:layout_marginTop="20dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@null"
                    android:button="@null"
                    android:background="@drawable/check_selector"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                ></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/textsize_textview"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="字号选择"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    />
                <RadioGroup
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_textsize_big"
                        android:layout_width="60dp"
                        android:layout_height="24dp"
                        android:button="@null"
                        android:text="大"
                        android:gravity="center"
                        android:textColor="@color/setting_button_textcolor_seletor"
                        android:background="@drawable/setting_button_background_selector"
                        />
                    <RadioButton
                        android:id="@+id/rb_textsize_middle"
                        android:layout_width="60dp"
                        android:layout_height="24dp"
                        android:button="@null"
                        android:text="中"
                        android:gravity="center"
                        android:textColor="@color/setting_button_textcolor_seletor"
                        android:background="@drawable/setting_button_background_selector"
                        />
                    <RadioButton
                        android:id="@+id/rb_textsize_small"
                        android:layout_width="60dp"
                        android:layout_height="24dp"
                        android:button="@null"
                        android:text="小"
                        android:gravity="center"
                        android:textColor="@color/setting_button_textcolor_seletor"
                        android:background="@drawable/setting_button_background_selector"
                        />

                </RadioGroup>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                ></View>
            <RelativeLayout
                android:id="@+id/language_setting"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="@drawable/all_press_color_selector">

                <TextView
                    android:id="@+id/setting_language"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="语言设置"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:src="@drawable/userinfo_arror"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                ></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="夜间模式"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    />
                <CheckBox
                    android:id="@+id/setting_night_checkbox"
                    android:layout_marginTop="20dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@null"
                    android:button="@null"
                    android:background="@drawable/check_selector"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                />
            <RelativeLayout
                android:onClick="click_clear_session"
                android:id="@+id/clear_session_setting"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="@drawable/all_press_color_selector"
                >

                <TextView
                    android:id="@+id/setting_clear_session"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清除缓存"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                />
            <RelativeLayout
                android:onClick="click_internet"
                android:id="@+id/internet_setting"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="@drawable/all_press_color_selector">

                <TextView
                    android:id="@+id/setting_internet"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网络诊断"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:textSize="16dp"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/grey"
                />
            <RelativeLayout
                android:onClick="click_share"
                android:id="@+id/share_setting"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="@drawable/all_press_color_selector">

                <TextView
                    android:id="@+id/setting_share"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐给好友"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:textSize="16dp"
                    />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:src="@drawable/userinfo_arror"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="16dp"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                />
            <RelativeLayout
                android:onClick="click_evaluate"
                android:id="@+id/evaluate_setting"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="@drawable/all_press_color_selector">

                <TextView
                    android:id="@+id/setting_evaluate"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="给我们评分吧"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:textSize="16dp"
                    />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:src="@drawable/userinfo_arror"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="16dp"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                />
            <RelativeLayout
                android:onClick="click_about"
                android:id="@+id/about_setting"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="@drawable/all_press_color_selector">

                <TextView
                    android:id="@+id/setting_about"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:textSize="16dp"

                    />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:src="@drawable/userinfo_arror"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                />
            <RelativeLayout
                android:onClick="click_advert"
                android:id="@+id/advert_setting"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:background="@drawable/all_press_color_selector">

                <TextView
                    android:id="@+id/setting_advert"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="广告投放"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:textSize="16dp"
                    />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:src="@drawable/userinfo_arror"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="16dp"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
               />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/setting_version"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="版本7.1.0"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:textSize="16dp"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                />

        </LinearLayout>


    </ScrollView>

</LinearLayout>