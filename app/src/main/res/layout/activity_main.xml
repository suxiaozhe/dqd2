                        </LinearLayout>

                        <LinearLayout
                            android:layout_toRightOf="@+id/menu3_game"
                            android:layout_marginLeft="0dp"
                            android:id="@+id/menu3_coach"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_marginTop="20dp"
                                android:id="@+id/menu3_image_coach"
                                android:layout_gravity="center"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/menu_notice"/>
                            <TextView
                                android:layout_marginTop="10dp"
                                android:id="@+id/menu3_text_coach"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="我是教练"/>

                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/white2">

                        <LinearLayout
                            android:layout_toLeftOf="@+id/menu3_advert"
                            android:layout_marginRight="0dp"
                            android:id="@+id/menu3_coachOL"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_marginTop="20dp"
                                android:id="@+id/menu3_image_coachOL"
                                android:layout_gravity="center"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/menu_notice"/>
                            <TextView
                                android:layout_marginTop="10dp"
                                android:id="@+id/menu3_text_coachOL"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="我是教练OL"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:id="@+id/menu3_advert"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_marginTop="20dp"
                                android:id="@+id/menu3_image_advert"
                                android:layout_gravity="center"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/menu_notice"/>
                            <TextView
                                android:layout_marginTop="10dp"
                                android:id="@+id/menu3_text_advert"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="广告自助投放"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_toRightOf="@+id/menu3_advert"
                            android:layout_marginLeft="0dp"
                            android:id="@+id/menu3_NoAdvert_vip"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_marginTop="20dp"
                                android:id="@+id/menu3_image_NoAdvert_vip"
                                android:layout_gravity="center"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/menu_notice"/>
                            <TextView
                                android:layout_marginTop="10dp"
                                android:id="@+id/menu3_text_NoAdvert_vip"
