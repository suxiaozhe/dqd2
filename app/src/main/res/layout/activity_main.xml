<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/fl_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></FrameLayout>

        <RadioGroup
            android:id="@+id/rg_main"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RadioButton
                android:id="@+id/rb_main_home"
                android:layout_width="0dp"
                android:button="@null"
                android:drawableTop="@drawable/main_botton_image_tab1_selector"
                android:textColor="@color/main_botton_textcolor_selector"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_botton_color_selector"
                android:textSize="12dp"
                android:text="首页" />


            <RadioButton
                android:id="@+id/rb_main_match"
                android:layout_width="0dp"
                android:button="@null"
                android:drawableTop="@drawable/main_botton_image_tab2_selector"
                android:textColor="@color/main_botton_textcolor_selector"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_botton_color_selector"
                android:textSize="12dp"
                android:text="比赛" />


            <RadioButton
                android:id="@+id/rb_main_favorite"
                android:layout_width="0dp"
                android:button="@null"
                android:background="@drawable/main_botton_favourite_color_selector"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_no_favourite"
                android:textColor="@color/main_botton_textcolor_selector"
                android:textSize="0sp"
               />


            <RadioButton
                android:id="@+id/rb_main_lottery"
                android:layout_width="0dp"
                android:button="@null"
                android:drawableTop="@drawable/main_botton_image_tab4_selector"
                android:textColor="@color/main_botton_textcolor_selector"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_botton_color_selector"
                android:text="足彩"
                android:textSize="12dp" />


            <RadioButton
                android:id="@+id/rb_main_data"
                android:layout_width="0dp"
                android:button="@null"
                android:drawableTop="@drawable/main_botton_image_tab5_selector"
                android:textColor="@color/main_botton_textcolor_selector"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_botton_color_selector"
                android:text="数据"
                android:textSize="12dp" />
        </RadioGroup>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/main_menu"
        android:layout_gravity="left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:headerLayout="@layout/head"
        app:menu="@menu/new_menu">

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>