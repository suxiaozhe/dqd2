                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/white2">

                        <LinearLayout
                            android:layout_toLeftOf="@+id/menu3_data"
                            android:layout_marginRight="0dp"
                            android:id="@+id/menu3_vip"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_marginTop="20dp"
                                android:id="@+id/menu3_image_vip"
                                android:layout_gravity="center"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/menu_notice"/>
                            <TextView
                                android:layout_marginTop="10dp"
                                android:id="@+id/menu3_text_vip"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="红单会员"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:id="@+id/menu3_data"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_marginTop="20dp"
                                android:id="@+id/menu3_image_data"
                                android:layout_gravity="center"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
