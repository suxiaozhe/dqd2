<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/fl_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></FrameLayout>

        <RadioGroup
            android:id="@+id/rg_main"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RadioButton
                android:id="@+id/rb_main_home"
                android:layout_width="0dp"
                android:button="@null"
                android:drawableTop="@drawable/main_botton_image_tab1_selector"
                android:textColor="@color/main_botton_textcolor_selector"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_botton_color_selector"
                android:textSize="12dp"
                android:text="首页" />


            <RadioButton
                android:id="@+id/rb_main_match"
                android:layout_width="0dp"
                android:button="@null"
                android:drawableTop="@drawable/main_botton_image_tab2_selector"
                android:textColor="@color/main_botton_textcolor_selector"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_botton_color_selector"
                android:textSize="12dp"
                android:text="比赛" />


            <RadioButton
                android:id="@+id/rb_main_favorite"
                android:layout_width="0dp"
                android:button="@null"
                android:background="@drawable/main_botton_favourite_color_selector"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_no_favourite"
                android:textColor="@color/main_botton_textcolor_selector"
                android:textSize="0sp"
               />


            <RadioButton
                android:id="@+id/rb_main_lottery"
                android:layout_width="0dp"
                android:button="@null"
                android:drawableTop="@drawable/main_botton_image_tab4_selector"
                android:textColor="@color/main_botton_textcolor_selector"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_botton_color_selector"
                android:text="足彩"
                android:textSize="12dp" />


            <RadioButton
                android:id="@+id/rb_main_data"
                android:layout_width="0dp"
                android:button="@null"
                android:drawableTop="@drawable/main_botton_image_tab5_selector"
                android:textColor="@color/main_botton_textcolor_selector"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_botton_color_selector"
                android:text="数据"
                android:textSize="12dp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/main_menu"
        android:layout_gravity="left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
    >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="177dp"
                    android:gravity="center"
                    android:background="@drawable/feed_bg"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"></LinearLayout>
                    <LinearLayout
                        android:id="@+id/menu_user_info"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/person"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:src="@drawable/head"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="72dp"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp"
                                android:textColor="#ffffff"
                                android:text="懂球帝用户"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp"
                                android:textColor="#ffffff"
                                android:text="已成为懂球帝第32天"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:textColor="#ffffff"
                                android:text="获得0个赞"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="20dp"
                                android:src="@drawable/userinfo_arror"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/menu_user_follow"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="关注"
                                android:textColor="@color/white"
                                android:textSize="14dp"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/grey"
                            ></View>


                        <LinearLayout
                            android:id="@+id/menu_user_fans"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="粉丝"
                                android:textColor="@color/white"
                                android:textSize="14dp"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/grey"
                            ></View>

                        <LinearLayout
                            android:id="@+id/menu_user_publish"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="18dp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="发表"
                                android:textColor="@color/white"
                                android:textSize="14dp"
                                android:layout_gravity="center"/>

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/grey"></View>

                    <RelativeLayout
                        android:id="@+id/menu_notice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="@drawable/all_press_color_selector"
                        >

                        <ImageView
                            android:id="@+id/image_notice"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/menu_notice"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"/>

                        <TextView
                            android:id="@+id/text_notice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/image_notice"
                            android:layout_marginLeft="20dp"
                            android:text="我的通知"
                            android:textSize="18dp"
                            />


                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        ></View>
                    <RelativeLayout
                        android:id="@+id/menu_collection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="@drawable/all_press_color_selector"
                        >

                        <ImageView
                            android:id="@+id/image_collection"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/menu_collection"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"/>

                        <TextView
                            android:id="@+id/text_collection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/image_collection"
                            android:layout_marginLeft="20dp"
                            android:text="收藏/历史"
                            android:textSize="18dp"
                            />


                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"></View>
                    <RelativeLayout
                        android:id="@+id/menu_news"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="@drawable/all_press_color_selector"
                        >

                        <ImageView
                            android:id="@+id/image_news"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/menu_news"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"/>

                        <TextView
                            android:id="@+id/text_news"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/image_news"
                            android:layout_marginLeft="20dp"
                            android:text="系统消息"
                            android:textSize="18dp"
                            />


                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"></View>
                    <RelativeLayout
                        android:id="@+id/menu_shop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:background="@drawable/all_press_color_selector"
                        >

                        <ImageView
                            android:id="@+id/image_shop"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/menu_shop"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"/>

                        <TextView
                            android:id="@+id/text_shop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/image_shop"
                            android:layout_marginLeft="20dp"
                            android:text="懂球帝商城"
                            android:textSize="18dp"
                            />


                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/grey"></View>

                </LinearLayout>

                <LinearLayout
