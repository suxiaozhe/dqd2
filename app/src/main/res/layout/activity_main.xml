                            android:id="@+id/menu3_lottery"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_marginTop="20dp"
                                android:id="@+id/menu3_image_lottery"
                                android:layout_gravity="center"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/menu_notice"/>
                            <TextView
                                android:layout_marginTop="10dp"
                                android:id="@+id/menu3_text_lottery"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="懂彩帝"/>

                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/white2">

                        <LinearLayout
                            android:layout_toLeftOf="@+id/menu3_game"
                            android:layout_marginRight="0dp"
                            android:id="@+id/menu3_rank"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_marginTop="20dp"
                                android:id="@+id/menu3_image_rank"
                                android:layout_gravity="center"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/menu_notice"/>
                            <TextView
                                android:layout_marginTop="10dp"
                                android:id="@+id/menu3_text_rank"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="中超排名预测"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_centerHorizontal="true"
